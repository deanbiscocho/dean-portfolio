          id="splide01-list"
          role="presentation"
          style="transform: translateX(-2040px);">
          <li
            class="flex justify-center flex-col splide__slide is-prev"
            id="splide01-slide03"
            role="tabpanel"
            aria-roledescription="slide"
            aria-label="3 of 4"
            style="margin-right: 0.5rem; width: calc(((100% + 0.5rem) / 1) - 0.5rem);"
            aria-hidden="true">
            <a href="https://www.query-iq.com/" target="_blank">
              <img
                alt="work"
                class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
                src="/work/1.png"
              />
            </a>
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20 ">
              <span class="block font-semibold">Project 1</span>
            </div>
          </li>
          <li
            class="flex justify-center flex-col splide__slide"
            id="splide01-slide01"
            role="tabpanel"
            aria-roledescription="slide"
            aria-label="1 of 4"
            style="margin-right: 0.5rem; width: calc(((100% + 0.5rem) / 1) - 0.5rem);"
            aria-hidden="true">
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="/work/2.png"
            />
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20 ">
              <span class="block font-semibold">Project 2</span>
            </div>
          </li>
          <li
            class="flex justify-center flex-col splide__slide is-prev"
            id="splide01-slide03"
            role="tabpanel"
            aria-roledescription="slide"
            aria-label="3 of 4"
            style="margin-right: 0.5rem; width: calc(((100% + 0.5rem) / 1) - 0.5rem);"
            aria-hidden="true">
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="/work/3.png"
            />
